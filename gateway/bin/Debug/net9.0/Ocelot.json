{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/produtos/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "inventory", "Port": 80 }],
      "UpstreamPathTemplate": "/inventory/{everything}",
      "UpstreamHttpMethod": ["GET","POST","PUT","DELETE"]
    },
    {
      "DownstreamPathTemplate": "/api/pedidos/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "sales", "Port": 80 }],
      "UpstreamPathTemplate": "/sales/{everything}",
      "UpstreamHttpMethod": ["GET","POST","PUT","DELETE"]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}
